#include <iostream>
using namespace std;

struct alfabet {
    char lit;
    int contor = 0;
} litere[30];

void initializare_alfabet(alfabet litere[]) {
    int i;
    char l = 'a';
    for (i = 0; i < 30; i++) {
        litere[i].lit = l;
        l++;
    }
    /*
    litere[26].lit = 'ă';
    litere[27].lit = 'î';
    litere[28].lit = 'ș';
    litere[29].lit = 'ț';
    */
}

void afisare_alfabet(){
    initializare_alfabet(litere);
    for (int i = 0; i < 30; i++) {
        cout << litere[i].lit <<' ';
    }
}

